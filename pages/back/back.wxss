/* pages/back/back.wxss */

.type-box {
  text-align: center;
  padding: 30rpx;
  font-size: 28rpx;
}

.type-img {
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 0 auto;
}

.content-box {
  width: 96%;
  border-radius: 15rpx;
  margin: 0 auto;
  padding: 20rpx 0;
  box-shadow: 0 0 30rpx #ccc;
}

.go-btn {
  width: 80%;
  height: 100rpx;
  background: red;
  margin: 20rpx auto;
  line-height: 100rpx;
  text-align: center;
  background: #0085e5;
  color: #fff;
  border-radius: 60rpx;
}

.step-img {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 10rpx auto;
}

.step-box {
  color: #999;
  font-size: 24rpx;
  margin: 30rpx;
  text-align: center;
}

.gradient {
  background: linear-gradient(to right, #00ffff, #1a1aff);
  -webkit-background-clip: text;
  color: transparent;
}
